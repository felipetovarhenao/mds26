$chord1 = c5 e5 g5 c6;
$chord2 = g4 d5 f5 b5;
$mixbpf = [0 0 0] [0.5 1 0.8] [1 0 0.8];
$x = arithmser(0, 1, null, 30);
$onset = 0;
for $pt in $x do (
    $mix = samplebpf($mixbpf, $pt);
    $chord = (1 - $mix) * $chord1 + $mix * $chord2;
    for $pitch in $chord do (
        ezsampler($pitch @duration 1000).transcribe($onset)
    );
    $onset += 250
);
render(@play 1)